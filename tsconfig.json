{
  "compilerOptions": {
    "target": "ES2020",        // Compile to modern JavaScript version
    "module": "ESNext",         // Use modern module system (for import/export)
    "esModuleInterop": true,    // Improves compatibility between CommonJS and ES modules
    "strict": true,             // Enable all strict type-checking options
    "skipLibCheck": true,       // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
    // "jsx": "react", // Removed as index.tsx does not currently use JSX syntax.
                       // Add back (e.g., "jsx": "react-jsx") if you use JSX.
    // "outDir": "./", // Removed to allow default in-place compilation (e.g., index.tsx -> index.js in the same directory)
    // "rootDir": "./",// Removed as not strictly needed for this simple setup with in-place compilation
    "sourceMap": true           // Generate .map files for debugging
  },
  "include": [
    "index.tsx"                 // Specifies that index.tsx should be compiled
  ]
  // "exclude" is not explicitly needed here; defaults will exclude "node_modules".
}
